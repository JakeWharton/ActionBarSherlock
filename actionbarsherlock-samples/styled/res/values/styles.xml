<resources>

    <!-- Variation on the Holo Light theme that styles the Action Bar -->
    <style name="Theme.AndroidDevelopers" parent="@style/Theme.Sherlock.Light">
        <item name="actionBarItemBackground">@drawable/selectable_background_androiddevelopers</item>
        <item name="popupMenuStyle">@style/PopupMenu.AndroidDevelopers</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.AndroidDevelopers</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.AndroidDevelopers</item>
        <item name="actionDropDownStyle">@style/DropDownNav.AndroidDevelopers</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.AndroidDevelopers</item>
        <item name="actionModeBackground">@drawable/cab_background_top_androiddevelopers</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_androiddevelopers</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.AndroidDevelopers</item>
<!--    <item name="actionOverflowButtonStyle">@style/MyOverflowButton</item> -->
    </style>

    <!-- style the solid action bar -->
    <style name="ActionBar.Solid.AndroidDevelopers" parent="@style/Widget.Sherlock.Light.ActionBar.Solid">
        <item name="background">@drawable/ab_solid_androiddevelopers</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_androiddevelopers</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_androiddevelopers</item>
        <item name="progressBarStyle">@style/ProgressBar.AndroidDevelopers</item>
    </style>

    <!-- style the transparent action bar -->
    <style name="ActionBar.Transparent.AndroidDevelopers" parent="@style/Widget.Sherlock.Light.ActionBar">
        <item name="background">@drawable/ab_transparent_androiddevelopers</item>
        <item name="progressBarStyle">@style/ProgressBar.AndroidDevelopers</item>
    </style>
	
    <!-- style the overflow menu -->
    <style name="PopupMenu.AndroidDevelopers" parent="@style/Widget.Sherlock.Light.ListPopupWindow">	
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_androiddevelopers</item>	
    </style>
	
    <!-- style the items within the overflow menu -->
    <style name="DropDownListView.AndroidDevelopers" parent="@style/Widget.Sherlock.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_androiddevelopers</item>
    </style>

    <!-- style the tabs -->
    <style name="ActionBarTabStyle.AndroidDevelopers" parent="@style/Widget.Sherlock.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_androiddevelopers</item>
    </style>
	
    <!-- style the list navigation -->
    <style name="DropDownNav.AndroidDevelopers" parent="@style/Widget.Sherlock.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_androiddevelopers</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_androiddevelopers</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_androiddevelopers</item>
    </style>
    
    <!-- style action bar's progress bar -->
    <style name="ProgressBar.AndroidDevelopers" parent="@style/Widget.Sherlock.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_androiddevelopers</item>
    </style>
    
    <!-- style the action mode done button -->
    <style name="ActionButton.CloseMode.AndroidDevelopers" parent="@style/Widget.Sherlock.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_androiddevelopers</item>
    </style>
    

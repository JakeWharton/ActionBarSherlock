<?xml version="1.0" encoding="utf-8"?>

<resources>
    <style name="Theme.Sherlock" parent="android:style/Theme.NoTitleBar">
        <item name="actionBarSize">45dip</item>
        <!--item name="actionBarStyle">@style/Widget.Sherlock.ActionBar</item-->
        <item name="actionBarTabStyle">@style/Widget.Sherlock.ActionBarView_TabView</item>
        <item name="actionBarTabBarStyle">@style/Widget.Sherlock.ActionBarView_TabBar</item>
        <item name="actionBarTabTextStyle">@style/Widget.Sherlock.ActionBarView_TabText</item>
        <item name="actionButtonStyle">@style/Widget.Sherlock.ActionButton</item>
        <item name="actionDropDownStyle">@style/Widget.Sherlock.Spinner.DropDown.ActionBar</item>
        <item name="actionHomeButtonStyle">@style/Widget.Sherlock.ActionButton.Home</item>
		<item name="actionMenuTextAppearance">?android:attr/textAppearanceMedium</item>
		<item name="actionMenuTextColor">?android:attr/textColorPrimary</item>
        <item name="actionModeBackground">@drawable/cab_background_holo_dark</item>
        <item name="actionModeCloseDrawable">@drawable/cab_ic_close_holo</item>
        <item name="actionModeCloseButtonStyle">@style/Widget.Sherlock.ActionButton.CloseMode</item>
        <item name="actionModePopupWindowStyle">@style/Widget.Sherlock.PopupWindow.ActionMode</item>
        <!--item name="actionModeStyle">@style/Widget.Sherlock.ActionMode</item-->
        <item name="actionOverflowButtonStyle">@style/Widget.Sherlock.ActionButton.Overflow</item>
        <item name="actionSpinnerItemStyle">@style/Widget.Sherlock.TextView.SpinnerItem.ActionBar</item>
        <item name="dropDownListViewStyle">@style/Widget.Sherlock.ListView.DropDown</item>
        <item name="dropdownListPreferredItemHeight">48dip</item>
        <item name="popupMenuStyle">@style/Widget.Sherlock.PopupMenu</item>
		<item name="selectableItemBackground">@color/actionbarwatson_item_bg</item>
        
        <!-- These should be in `Widget.Sherlock.ActionBar` but there is no way to then -->
        <!-- reference them as sibling attributes to their native counterparts. See: -->
        <!-- http://stackoverflow.com/questions/6486594/access-sibling-style-attributes-in-a-non-theme-style -->
        <item name="abBackground">@android:color/transparent</item>
        <item name="abCustomNavigationLayout">@null</item>
        <item name="abDisplayOptions">useLogo|showHome|showTitle</item>
        <item name="abDivider">@drawable/list_divider_holo_dark</item>
        <item name="abHeight">@null</item>
        <item name="abHomeAsUpIndicator">@drawable/ic_ab_back_holo_dark</item>
        <item name="abHomeLayout">@null</item>
        <item name="abIcon">@null</item>
        <item name="abIndeterminateProgressStyle">@android:style/Widget.Holo.ProgressBar</item>
        <item name="abItemPadding">8dip</item>
        <item name="abLogo">@null</item>
        <item name="abNavigationMode">normal</item>
        <item name="abTitle">@null</item>
        <item name="abTitleTextStyle">@style/TextAppearance.Widget.Title</item>
        <item name="abProgressBarPadding">32dip</item>
        <item name="abProgressBarStyle">@android:style/Widget.Holo.ProgressBar.Horizontal</item>
        <item name="abSubtitle">@null</item>
        <item name="abSubtitleTextStyle">@style/TextAppearance.Widget.Subtitle</item>
		<item name="amBackground">?actionModeBackground</item>
		<item name="amHeight">?actionBarSize</item>
        <item name="amTitleTextStyle">@android:style/TextAppearance.Medium</item>
        <item name="amSubtitleTextStyle">@android:style/TextAppearance.Small</item>
	</style>
	
	<style name="Widget.Sherlock.ActionBarView_TabBar" parent="android:style/Widget">
	</style>
	
	<style name="Widget.Sherlock.ActionBarView_TabView" parent="android:style/Widget">
		<item name="android:background">@drawable/tab_indicator_holo</item>
		<item name="android:paddingLeft">6dp</item>
		<item name="android:paddingRight">6dp</item>
    </style>
    
    <style name="Widget.Sherlock.ActionBarView_TabText" parent="android:style/Widget">
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:textColor">@color/actionbarwatson_tab_text_color_dark</item>
        <item name="android:textSize">18sp</item>
    </style>
	
	<style name="Widget.Sherlock.ActionButton" parent="android:style/Widget">
		<item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">6dip</item>
        <item name="android:paddingRight">6dip</item>
        <item name="android:scaleType">center</item>
	</style>
	
	<style name="Widget.Sherlock.Spinner.DropDown.ActionBar" parent="android:style/Widget.Spinner.DropDown">
        <item name="android:background">@drawable/spinner_background_holo_dark</item>
        <item name="android:gravity">left|center_vertical</item>
	</style>
	
	<style name="Widget.Sherlock.ActionButton.CloseMode">
	</style>
	
	<style name="Widget.Sherlock.PopupWindow.ActionMode" parent="android:style/Widget">
	</style>
	
	<style name="Widget.Sherlock.ActionButton.Home">
		<item name="android:paddingLeft">0dip</item>
		<item name="android:paddingRight">0dip</item>
	</style>
	
	<style name="Widget.Sherlock.ActionButton.Overflow">
	</style>
	
	<style name="Widget.Sherlock.TextView.SpinnerItem.ActionBar" parent="android:style/Widget">
        <item name="android:textColor">@color/actionbarwatson_tab_text_color_dark</item>
	</style>
	
	<style name="Widget.Sherlock.ListPopupWindow" parent="android:style/Widget.ListPopupWindow">
	</style>
	
	<style name="Widget.Sherlock.ListView.DropDown" parent="android:style/Widget.ListView.DropDown">
	</style>
	
	<style name="Widget.Sherlock.ListPopupWindow" parent="android:style/Widget.ListPopupWindow">
	</style>
	
	<style name="Widget.Sherlock.PopupMenu" parent="android:style/Widget.PopupMenu">
	</style>
	
	
	
	
	
